@model IEnumerable<WebApplication1.Models.Country>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Countries Lists</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Create new Expense Category</a> 
        </div>
    </div>
    <br />

    @if(Model.Count()>0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Country
                    </th>
                    <th>
                        Changes
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="35%">@item.Name</td>
                        <td width="40">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Country" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Country" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
     }

            else
            {
                <p>No expense created yet</p>
            }

</div>